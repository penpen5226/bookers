<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th colspan = "3"></th>
        </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
       <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book.id)%></td>
          <td><%= link_to "Edit","/books"%></td>
          <td><%= link_to "Destroy","/books"%></td>
       </tr>
      <% end %>
    </tbody>
</table>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>

<h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>