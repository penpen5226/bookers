<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>title</th>
            <% @books.each do |book| %>
            <th>body</th>
              <span><%= book.title %></span>
            <% end %>
            <th colspan = "3"></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>

<h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>